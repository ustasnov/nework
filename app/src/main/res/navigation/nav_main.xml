<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_main"
    app:startDestination="@id/feedFragment">

    <fragment
        android:id="@+id/feedFragment"
        android:name="ru.netology.nmedia.FeedFragment"
        android:label="fragment_feed"
        tools:layout="@layout/fragment_feed">
        <action
            android:id="@+id/action_feedFragment_to_newPostFragment"
            app:destination="@id/newPostFragment" />
        <action
            android:id="@+id/action_feedFragment_to_postFragment"
            app:destination="@id/postFragment"
            app:enterAnim="@anim/slide_in_upp"
            app:exitAnim="@anim/slide_out_down"
            app:popEnterAnim="@anim/slide_in_upp"
            app:popExitAnim="@anim/slide_out_down" />
        <action
            android:id="@+id/action_feedFragment_to_postAttachmentFragment"
            app:destination="@id/postAttachmentFragment" />
        <action
            android:id="@+id/action_feedFragment_to_mentionsFragment"
            app:destination="@id/mentionsFragment" />
        <action
            android:id="@+id/action_feedFragment_to_likeOwnersFragment"
            app:destination="@id/likeOwnersFragment" />
    </fragment>
    <fragment
        android:id="@+id/newPostFragment"
        android:name="ru.netology.nmedia.NewPostFragment"
        android:label="fragment_new_post"
        tools:layout="@layout/fragment_new_post" />
    <fragment
        android:id="@+id/postFragment"
        android:name="ru.netology.nmedia.PostFragment"
        android:label="PostFragment">
        <action
            android:id="@+id/action_postFragment_to_newPostFragment"
            app:destination="@id/newPostFragment" />
        <action
            android:id="@+id/action_postFragment_to_feedFragment"
            app:destination="@id/feedFragment" />
        <action
            android:id="@+id/action_postFragment_to_postAttachmentFragment"
            app:destination="@id/postAttachmentFragment" />
    </fragment>
    <fragment
        android:id="@+id/postAttachmentFragment"
        android:name="ru.netology.nmedia.PostAttachmentFragment"
        android:label="PostAttachmentFragment">
        <action
            android:id="@+id/action_postAttachmentFragment_to_feedFragment"
            app:destination="@id/feedFragment" />
        <action
            android:id="@+id/action_postAttachmentFragment_to_postFragment"
            app:destination="@id/postFragment" />
    </fragment>
    <fragment
        android:id="@+id/authFragment"
        android:name="ru.netology.nmedia.AuthFragment"
        android:label="AuthFragment" />
    <fragment
        android:id="@+id/registrationFragment"
        android:name="ru.netology.nmedia.RegistrationFragment"
        android:label="RegistrationFragment" />
    <fragment
        android:id="@+id/usersFragment"
        android:name="ru.netology.nmedia.UsersFragment"
        android:label="UsersFragment" >
        <action
            android:id="@+id/action_usersFragment_to_profileFragment"
            app:destination="@id/profileFragment" />
    </fragment>
    <fragment
        android:id="@+id/mentionsFragment"
        android:name="ru.netology.nmedia.MentionsFragment"
        android:label="MentionsFragment" />
    <fragment
        android:id="@+id/likeOwnersFragment"
        android:name="ru.netology.nmedia.LikeOwnersFragment"
        android:label="LikeOwnersFragment" />
    <fragment
        android:id="@+id/participantsFragment"
        android:name="ru.netology.nmedia.ParticipantsFragment"
        android:label="ParticipantsFragment" />
    <fragment
        android:id="@+id/speakersFragment"
        android:name="ru.netology.nmedia.SpeakersFragment"
        android:label="SpeakersFragment" />
    <fragment
        android:id="@+id/eventsFeedFragment"
        android:name="ru.netology.nmedia.EventsFeedFragment"
        android:label="fragment_events_feed"
        tools:layout="@layout/fragment_events_feed" >
        <action
            android:id="@+id/action_eventsFeedFragment_to_participantsFragment"
            app:destination="@id/participantsFragment" />
        <action
            android:id="@+id/action_eventsFeedFragment_to_speakersFragment"
            app:destination="@id/speakersFragment" />
        <action
            android:id="@+id/action_eventsFeedFragment_to_likeOwnersFragment"
            app:destination="@id/likeOwnersFragment" />
        <action
            android:id="@+id/action_eventsFeedFragment_to_postAttachmentFragment"
            app:destination="@id/postAttachmentFragment" />
    </fragment>
    <fragment
        android:id="@+id/profileFragment"
        android:name="ru.netology.nmedia.ProfileFragment"
        android:label="ProfileFragment" />
</navigation>
